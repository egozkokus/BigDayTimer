{
  "manifest_version": 3,
  "name": "BigDayTimer",
  "version": "1.0.0",
  "description": "Beautiful personal Chrome extension displaying a floating styled countdown timer for life's most important events",
  
  "permissions": [
    "storage",
    "activeTab",
    "alarms",
    "notifications"
  ],
  
  "host_permissions": [
    "https://*.paddle.com/*",
    "https://*.paddleapi.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [],
      "js": ["content.js"],
      "css": ["timer.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "BigDayTimer"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["backgrounds/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}